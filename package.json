{
    "name": "flowlint",
    "version": "0.7.0",
    "description": "CLI for static analysis of n8n workflows",
    "bin": {
        "flowlint": "./dist/cli.js"
    },
    "main": "dist/cli.js",
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsx src/cli.ts",
        "test": "vitest run",
        "prepublishOnly": "npm run build",
        "release": "release-it"
    },
    "keywords": [
        "n8n",
        "workflow",
        "linter",
        "cli",
        "static-analysis"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Replikanti/flowlint-cli.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=18.20.8"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "glob": "^13.0.0",
        "picocolors": "^1.1.1",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@replikanti/flowlint-core": "^0.7.0",
        "@types/node": "^24.0.0",
        "tsup": "^8.0.0",
        "tsx": "^4.21.0",
        "typescript": "^5.4.0",
        "vitest": "^4.0.15"
    }
}
